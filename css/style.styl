  img
    width: 100%

// Слайдер в блоке
.js_frame
  position: relative
  font-size: 0
  line-height: 0
  overflow: hidden
.js_slides
  align-items: center
  display: flex
  flex-direction: column
  justify-content: center
  font-size: 0
.js_prev
.js_next
  cursor: pointer
  display: block
  left: 50%
  position: absolute
  transform: translateX(-50%)
.js_prev
  top: 0
.js_next
  top: 30%

// Table block
.table-block
  margin-bottom: 2%
  img
    margin-right: 50px
    max-height: 250px
    vertical-align: middle

// Стили таблицы
.table
  display: inline-block
  font-size: .9rem
  text-align: center
  vertical-align: middle
thead
  background-color: tablecolor
  color: white
  font-weight: bold
tbody tr:nth-child(even)
  background-color: tableline
tr:not(:last-child)
  border-bottom: 1px solid tableborder
td:first-child
  font-weight: bold
th
td
  padding: 9px
  &:not(:last-child)
    border-right: 1px solid tableborder


