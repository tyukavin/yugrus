    //   width: 25px

    // Заголовок раздела
  .head-block
    font-size: 1.4rem
    font-weight: bold
    margin-bottom: 20px
    margin-left: -20px
  // Параграф с информацией разделов
  .text-block
    font-size: 1.1rem
    padding-right: 15px
  // Характеристика выделенная
  .active-item
    color: text
    font-weight: bold
    padding: 0 3px
    transition: all trans
    &:hover
      background-color: text
      color: white
  // Кнопки заявки и прайс-листа
  .button-item
    cursor: pointer
    border: 2px solid text
    border-radius: 7px
    color: text
    display: inline-block
    font-size: 1.2rem
    font-weight: bold
    height: 45px
    margin-top: 4%
    overflow: hidden
    padding-right: 10px
    position: relative
    transition: color trans
    user-select: none
    &:first-of-type
      margin-right: 4%
    &:before
      background-color: text
      content: ''
      height: 100%
      left: 0
      position: absolute
      top: 0
      transition: width trans1
      width: 0
      z-index: -1
    &:hover
      color: white
      &:before
        width: 100%
    i
      background-color: text
