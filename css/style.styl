// Страница группы товаров
.group-block
  align-items: center
  display: flex
  flex-flow: row wrap
  justify-content: flex-start
  padding-right: 20px
.group-item
  border: 1px solid groupcolor
  box-shadow: 0
  cursor: pointer
  display: inline-block
  height: 250px
  margin-bottom: 25px
  margin-right: 25px
  overflow: hidden
  text-align: center
  transition: box-shadow trans1
  width: 260px
  &:hover
    box-shadow: 0 0 20px 1px groupcolor
  p
    height: 195px
    padding: 7px
  img
    height: 100%
    width: auto
  figcaption
    align-items: center
    display: flex
    justify-content: center
    font-size: .95rem
    height: 55px
    padding: 0 5px
    position: relative
    &:before
      background-color: groupcolor
      content: ''
      height: 1px
      left: 7.5%
      position: absolute
      top: 0
      width: 85%
.group-text
  font-size: 1.1rem
  padding-right: 15px
  margin-bottom: 25px
  p:not(:first-child)
    margin-top: 15px


// Footer
.footer
  align-items: center
  background-color: menucolor
  border-image: url(../svg/arrow_menu.svg) 100 0 0
  border-style: solid
  border-width: 3px 0 0
  bottom: 0
  color: white
  display: flex
  font-size: 1.1rem
  flex-direction: column
  justify-content: center
  left: 0
  position: fixed
  width: wheader
  z-index: 11
  height: 150px
  a
    text-align: center
    &:last-child
      line-height: 1.25
  a:not(:last-child)
    margin-bottom: 13px




// Анимации
@keyframes download {
  50% {
    transform: translate3d(0,6px,0)
  }
  100% {
    transform: translate3d(0,0,0)
  }
}

@keyframes sidebar {
  0% {
    height: 100%
  }
  50% {
    height: 50%
  }
  100% {
    height: 0
  }
}

@keyframes sidebar-2 {
  0% {
    height: 50%
  }
  100% {
    height: 100%
  }
}

