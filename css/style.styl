// Header
.header
  background-color: menucolor
  color: white
  height: 100%
  left: 0
  position: fixed
  top: 0
  width: wheader
  z-index: 10
  .logo
    background-image: url(../svg/arrow_menu_top.svg)
    background-position: bottom
    background-repeat: no-repeat
    height: 260px
    padding: 25px
    text-align: center
    a
      display: block
      margin-bottom: 25px
    .logo-text
      font-size: 1.8rem
  .header-menu-item
    cursor: pointer
    background-image: url(../svg/arrow_menu_bottom.svg), url(../svg/arrow_menu_top.svg)
    background-position: top, bottom
    background-repeat: no-repeat
    font-size: 1.15rem
    min-height: 50px
    line-height: 50px
    padding-left: 45px
    position: relative
    transition: background-color trans
    &:last-child:after
      background-image: url(../svg/arrow_menu_bottom.svg)
      background-position: top
      background-repeat: no-repeat
      bottom: -3px
      content: ''
      height: 3px
      position: absolute
      left: 0
      width: 100%
    &:hover
      background-color: menuline
    a
      display: block
  .header-menu-catalog
    // overflow: hidden
    transition: height trans1
    &:hover
      // height: 305px
    &:hover .catalog-menu
      height: 255px
      visibility: visible
    .catalog-menu
      height: 0
      overflow: hidden
      transition: all trans1
      visibility: hidden
      li
        font-size: .85rem
        height: 35px
        line-height: 35px
        padding-left: 10px
        transition: background-color trans
        &:hover
          background-color: menuactive
  // Выезжающие пункты
  .header-menu-catalog .catalog-menu-group
    background-color: menuline
    display: flex
    flex-direction: column
    height: 100%
    justify-content: center
    overflow: hidden
    position: fixed
    left: 270px
    top: 0
    transition: all trans1
    visibility: hidden
    width: 0
    z-index: -10
    li
      cursor: pointer
      height: 40px
      line-height: 40px
      padding-left: 15px
      width: 270px
  #strop-item:hover .strop-item
  #zahvat-item:hover .zahvat-item
  #travers-item:hover .travers-item
  #crane-item:hover .crane-item
  #oborud-item:hover .oborud-item
  #krepej-item:hover .krepej-item
  #complect-item:hover .complect-item
    visibility: visible
    width: 270px
    z-index: 1

// Стили для контентоной части главной страницы
.content
  height: 100%
  margin-left: wheader
  position: relative
  width: calc(100% - 270px)
  .head-page
    font-size: 1.9rem
    font-weight: bold
    text-align: left
  .slider
    height: 100%
    position: relative
    width: calc(100% - 390px)
  // Фон у слайдов
  #strop
    background-image: url(../img/strop-min.jpg)
  #zahvat
    background-image: url(../img/zahvat-min.jpg)
  #travers
    background-image: url(../img/travers-min.jpg)
  #crane
    background-image: url(../img/crane-min.jpg)
  #oborud
    background-image: url(../img/oborud-min.jpg)
  #krepej
    background-image: url(../img/krepej-min.jpg)
  #complect
    background-image: url(../img/complect-min.jpg)
  .slide
    background-position: center
    background-size: cover
    height: 100%
    opacity: 0
    padding-top: 90px
    position: absolute
    transition: all 1s ease-in-out
    visibility: hidden
    width: 100%
    z-index: 10
    // Overlay на фон салйдов
    &:before
      background-color: rgba(0, 0, 0, 0.3)
      content: ''
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: 100%
      z-index: 12
    & > *
      z-index: 15
    // Активный слайд
    &.active
      opacity: 1
      visibility: visible
      z-index: 11
    h2
      color: white
      font-size: 2rem
      font-weight: bolder
      padding-left: 80px
      position: relative
      text-shadow: 2px 2px 3px black
      z-index: 15
    .slider-block
      align-items: center
      bottom: 65px
      display: flex
      flex-direction: column
      justify-content: center
      height: 320px
      left: 0
      position: absolute
      right: 0
      // &:hover .prev
      //   left: -7%
      // &:hover .next
      //   right: -7%
      .slider-block-buttons
        // align-items: center
        // display: flex
        // justify-content: center
        height: 40%
        position: relative
        text-align: center
        width: 100%

      .prev
      .next
        background-color: transparent
        content: ''
        cursor: pointer
        height: hprev = 30px
        opacity: .6
        position: absolute
        top: 15%
        transform: rotate(45deg)
        transition: left trans, right trans, box-shadow trans, opacity trans
        width: hprev
        z-index: 10
        &:hover
          opacity: 1
      .prev
        border-bottom: bord
        border-left: bord
        box-shadow: -2px 2px 2px 0px shadow
        left: 5%
        &:hover
          box-shadow: -2px 2px 3px 0px shadowhov
      .next
        border-top: bord
        border-right: bord
        box-shadow: 2px -2px 2px 0px shadow
        right: 5%
        &:hover
          box-shadow: 2px -2px 3px 0px shadowhov
      .slider-block-text
        background-color: textcolor
        border-radius: 10px
        color: white
        font-size: 1.1rem
        height: 60%
        line-height: 1.3
        min-width: 550px
        padding: 20px 30px
        width: 80%
        a
          color: #011656
          font-size: 1.55vw
          text-decoration: underline
          &:hover
            font-weight: bold
  .container-button-group
    align-items: center
    display: flex
    justify-content: center
    height: 128px
  // Кнопки над текстом
  .button-group
    align-items: center
    // background: rgba(14, 19, 14, 0.2)
    border: 2px solid text
    border-radius: 5px
    color: text
    display: flex
    font-size: .95rem
    font-weight: bolder
    justify-content: center
    height: 55px
    min-width: 140px
    padding: 0 8px
    text-shadow: 1px 1px 2px black;
    transition: all trans
    width: 15%
    &:not(:last-child)
      margin-right: 3%
    &:hover
      background-color: text
      color: white
      text-shadow: none

  .pannel
    height: 100%
    position: absolute
    right: 0
    top: 0
    width: 390px
    ul
      display: flex
      justify-content: space-around
      height: 100%
      flex-flow: row wrap
      li
        background-color: maincolor
        //border: 1px solid mainborder
        color: white
        height: 25%
        overflow: hidden
        position: relative
        transition: background-color trans
        width: 50%
        &.active .sidebar
          animation: sidebar 5s linear forwards
          background: mainactive
        .sidebar
          background: transparent
          bottom: 0
          content: ''
          height: 0 // height: 100%
          left: 0
          position: absolute
          transition: all trans
          width: 100%
          z-index: 1
        &:nth-child(odd)
          border-right: 1px solid mainborder
        &:not(:nth-child(n+7))
          border-bottom: 1px solid mainborder
        &:hover
          background-color: mainactive
        &:hover h3
          text-shadow: 0 1px 2px black
        &:hover a svg
          stroke: black
          stroke-width: 40px
          transform-origin: 50% 50%
          transform: scale(1.05)
        a:first-child
          align-items: center
          display: flex
          flex-direction: column
          justify-content: space-around
          height: 100%
          width: 100%

  .buttons-pagination
    left: 50%
    position: absolute
    text-align: center
    top: 0
    transform: translateX(-50%)
    z-index: 20
    button
      background-color: transparent
      border: 2px solid text
      border-radius: 50%
      cursor: pointer
      display: inline-block
      height: hb = 25px
      transition: background-color trans
      width: hb
      &.active
        background-color: text
      &:not(:last-child)
        margin-right: 10px

// Стили для контентоной части остальных страниц сайта
.content-other
  height: auto
  min-height: 100%
  padding-bottom: 2%
  padding-top: 3%
  padding-left: 4%

// Хлебные крошки
.brud-box
  margin-top: 25px
  .brud-item
    color: mainactive
    cursor: pointer
    display: inline-block
    position: relative
    transition: text-shadow trans
    user-select: none
    &:not(:last-child)
      margin-right: 15px
      &:before
        background-color: mainactive
        bottom: -1px
        content: ''
        display: block
        height: 1px
        left: 0
        position: absolute
        transition: width trans
        width: 0
      &:after
        content: '>'
        position: absolute
        right: -15px
        top: .5px
        text-shadow: none
        transform-origin: 50% 50%
        transition: all trans
    &:hover
      // text-shadow: 1px 1px 1px #7bb9de
    &:hover:before
      width: 100%
    &:hover:after
      transform: rotate(180deg) translate(2.5px, -1.5px)
  .brud-item-last
    color: #6E6B56
    cursor: default
    // text-shadow: 0 0 3px #7d7c7c


